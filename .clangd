CompileFlags:
  Add: 
    - -std=c++20
    - -Wall
    - -Wextra
    - -Wpedantic
    - -I./include
    - -I/opt/homebrew/Cellar/raylib/5.5/include
  
Diagnostics:
  ClangTidy:
    Add: 
      - modernize-*
      - performance-*
      - readability-*
      - bugprone-*
      - misc-*
    Remove:
      - modernize-use-trailing-return-type
      - readability-braces-around-statements

Index:
  Background: Build

Hover:
  ShowAKA: true
